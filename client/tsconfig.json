{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowUmdGlobalAccess": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2019",
      "dom",
      "scripthost"
    ],
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "Types/*": ["src/types/*"],
      "Helpers/*": ["src/helpers/*"],
      "Queries/*": ["src/graphql/queries/*"],
      "Mutations/*": ["src/graphql/mutations/*"]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "lodash",
      "jquery",
      "toastr",
      "moment",
      "@types/webpack-env"
    ]
  },
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "dev",
    "reports"
  ]
}
